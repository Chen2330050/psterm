{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#3b78ff",
          "style": "plain",
          "properties": {
            "style": "mixed"
          },
          "template": "{{ if eq .Path \"~\" }}{{ .Location }}{{ else }}{{ .Path }}{{ end }}",
          "type": "path"
        },
        {
          "properties": {
            "fetch_status": true
          },
          "style": "plain",
          "template": "{{ if .Upstream }} \ue709{{end}}{{ if .Staging.Changed }}<#f44d27> {{ .HEAD }}</>{{ else if .Working.Changed }}<#cd9f00> {{ .HEAD }}</>{{ else }}<#00909a> {{ .HEAD }}</>{{ end }}{{ if .Staging.Changed }}<#f44d27> S{{ .Staging.String }}</>{{ end }}{{ if .Working.Changed }}<#cd9f00> W{{ .Working.String }}</>{{ end }}{{ if gt .StashCount 0 }}<#fff> s{ {{- .StashCount -}} }</>{{ end }}",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#fff",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#e74856{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "> ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 3
}